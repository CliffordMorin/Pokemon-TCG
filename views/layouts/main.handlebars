<html>

  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Pokemon Homepage Template
    </title>
    <script
      src="https://kit.fontawesome.com/0d8db3f55e.js"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css"
    />
    {{!-- Materialize css --}}
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css"
    />
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
    <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body class="is-mobile">
    <section class="hero is-large is-danger is-mobile">
      <div class="hero body" id="TitleBar">
        <p class="title">
          <h1 class="title is-1 has-text-centered" id="title"><span
              class="iconify"
              data-icon="mdi-pokeball"
              data-inline="false"
            ></span>Pokédex<span
              class="iconify"
              data-icon="mdi-pokeball"
              data-inline="false"
            ></span>
          </h1>
        </p>
      </div>
    </section>

    <nav class="navbar has-shadow is-primary" id="linkBar">
      <div class="navbar-end">
        <a class="navbar-burger" id="burger">
          <span></span>
          <span></span>
          <span></span>
        </a>
      </div>
      <div class="navbar-menu" id="nav-links">
        <a href='/' class="navbar-item">Home</a>
        <a href='battle' class="navbar-item">Battle!</a>
        <a href='pokedex' class="navbar-item">Pokédex</a>
        {{#if logged_in}}
          <a class="navbar-item" id="logout">Logout</a>
        {{else}}
          <a class="navbar-item" href="/login">Login</a>
        {{/if}}
        <div class="navbar-end">
          <a href='/profile' class="navbar-item" id="profile">My Trainer</a>
        </div>
      </div>
    </nav>
    <div>
      {{{body}}}
    </div>

    <!-- materialize javascript package -->
    <script src="/js/materialize.js"></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"
    ></script>
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

</html>