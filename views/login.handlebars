<div class="row">
  <div class="col s6">
    <h2>Login</h2>

    <form class="form login-form">
        <div class="row">
      <div class="input-field col s6">
        <input id="email-login" type="email" class="validate" />
        <label for="email-login">Email</label>
      </div>
      </div>
      <div class="row">
      <div class="input-field col s6">
        <input id="password-login" type="password" class="validate" data-length="10"/>
        <label for="password-login">Password</label>
      </div>
      </div>
      <div class="row">
      <div class="form-group">
        <button class="btn waves-effect waves-light" type="submit" name="action">login
    <i class="material-icons right">send</i>
      </div>
      </div>
    </form>
  </div>
  <div class="col s6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="row">
        <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
        <input id="username-signup" type="text" class="validate" />
        <label for="username-signup">Username</label>
      </div>
      </div>
      <div class="row">
      <div class="input-field col s6">
        <input id="email-signup" type="email" class="validate" />
        <label for="email-signup">Email</label>
      </div>
      </div>
      <div class="row">
      <div class="input-field col s6">
        <input id="password-signup" type="password" class="validate" data-length="10"/>
        <label for="password-signup">Password</label>
      </div>
      </div>
      <div class="row">
      <div class="form-group">
          <button class="btn waves-effect waves-light" type="submit" name="action">Sign-Up
    <i class="material-icons right">send</i>
  </button>
      </div>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>