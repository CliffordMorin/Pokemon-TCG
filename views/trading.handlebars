<div class="l-flex-fix">
    <div class="l-flex-parent">
        <div class="t-purple l-flex-child l-grid-half">
            <h4>The cards I want to Trade away</h4>
            <div class="card-item">
                <ul class="collapsible">
                    <li>
                        <div class="collapsible-header">
                            <i class="iconify" data-icon="mdi-pokeball" data-inline="true" style="font-size: 26px;"
                                id="trade-icon"></i>
                            Your Cards
                            <span></span></div>
                        <div class="collapsible-body" id="left-trade">
                            <ul>
                                {{#each userCards as |userCard|}}
                                <li data-id="{{userCard.id}}" data-user="{{userCard.user_id}}" class="my-card">
                                    {{userCard.card_name}}</li>
                                {{/each}}
                            </ul>
                    </li>
                </ul>
            </div>
        </div>

        <div class="btn-color">
            <a onclick="M.toast({html: 'Traded!', classes: 'rounded red'})" class="waves-effect waves-light btn-large" id="tradeBtn">Trade</a>
        </div>

        <div class="t-white l-flex-child l-grid-half">
            <h4>The cards from other users</h4>
            <div class="card-item">
                <ul class="collapsible">
                    <li>
                        <div class="collapsible-header">
                            <i class="iconify" data-icon="mdi-pokeball" data-inline="true" style="font-size: 26px;"
                                id="trade-icon"></i>
                            Other User's Card
                            <span></span></div>
                        <div class="collapsible-body" id="right-trade">
                            <ul>
                                {{#each otherCards as |otherCard|}}
                                <li data-user="{{otherCard.user_id}}" data-id="{{otherCard.id}}" class="other-card">
                                    {{otherCard.card_name}}</li>

                                {{/each}}
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<script src="/js/trading.js"></script>