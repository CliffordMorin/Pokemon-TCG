<div class="l-flex-fix">
    <div class="l-flex-parent">
        <div class="t-purple l-flex-child l-grid-half">
            <h4>The cards I want to Trade away</h4>
            <div class="card-item">
                <ul class="collapsible">
                    <li>
                        <div class="collapsible-header">
                            <i class="material-icons">filter_drama</i>
                            Pikachu
                            <span class="new badge">2</span></div>
                        <div class="collapsible-body">
                            <ul>
                                {{#each userCards as |userCard|}}
                                <li data-id="{{userCard.id}}">{{userCard.card_name}}</li>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header">
                            <i class="material-icons">place</i>
                            Charizard
                            <span class="badge">1</span></div>
                        <div class="collapsible-body">
                            <ul>
                               
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="t-white l-flex-child l-grid-half">
            <h4>The cards from other users</h4>
            <div class="card-item">
                <ul class="collapsible">
                    <li>
                        <div class="collapsible-header">
                            <i class="material-icons">filter_drama</i>
                            Eevee
                            <span class="new badge">2</span></div>
                        <div class="collapsible-body">
                            <ul>
                            {{#each otherCards as |otherCard|}}
                            <li data-user="{{otherCard.user_id}}">{{otherCard.card_name}}</li>
                            {{/each}}
                            </ul>
                        </div>
                    </li>
                    <li>
                        <div class="collapsible-header">
                            <i class="material-icons">place</i>
                            Mewtwo
                            <span class="badge">1</span></div>
                        <div class="collapsible-body">
                            <ul>
                                <li>Mewtwo</li>
                                <li>Detective Mewtwo</li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>