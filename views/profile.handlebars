{{!-- Slide our nav bar for decks --}}
{{#if logged_in}}

<ul id="slide-out" class="sidenav">
  <li>
    <div class="user-view">
      <div class="background profile-bg">
        <img src="/images/profile.png" />
      </div>
      <a href="#name"><span class="white-text name">{{card.user.username}}</span></a>
      <a href="#email"><span class="white-text email">{{user.email}}</span></a>
    </div>
  </li>
  <li><a class="waves-effect" href="#!"><span class="iconify pokeball" data-icon="mdi:pokemon-go"
        data-inline="false"></span>Deck 1</a></li>
  <li><a class="waves-effect" href="#!"><span class="iconify pokeball" data-icon="mdi:pokemon-go"
        data-inline="false"></span>Deck 2</a></li>
  <li><a class="waves-effect" href="#!"><span class="iconify pokeball" data-icon="mdi:pokemon-go"
        data-inline="false"></span>Deck 3</a></li>
  <li><a class="waves-effect" href="#!"><span class="iconify pokeball" data-icon="mdi:pokemon-go"
        data-inline="false"></span>Deck 4</a></li>
</ul>
<a href="#" data-target="slide-out" class="sidenav-trigger btn waves-effect waves-light">My Decks</a>


{{! Carousel of cards }}

<h1 class="collection-title">My Collection</h1>

<div class="carousel">
  {{#each cards as |card|}}
  <a href="#modal{{card.id}}" class="carousel-item modal-trigger"><img src="{{card.card_image}}" /></a>
  {{/each}}

</div>
{{#each cards as |card|}}
<!-- Modal Structure -->
<div id="modal{{card.id}}" class="modal">
  <div class="modal-content">
    <h4>{{card.card_name}}</h4>
    <img src="{{card.card_image}}" alt="{{card.card.name}}">
    <p>{{card.description}}</p>
  </div>
  <div class="modal-footer" id="modal-footer">
    <div class="fixed-action-btn">
      <a class="btn-floating btn-large red">
        <i class="large material-icons">mode_edit</i>
      </a>
      <ul>
        <li><a onclick="M.toast({html: '{{card.card_name}} Deleted From Deck', classes: 'rounded blue'})"
            class="btn-floating red modal-close"><i class="material-icons">delete_forever</i></a></li>
        <li><a onclick="location.href='/trading'" class="btn-floating green modal-close"><i class="material-icons"
              data-api="{{card.id}}" data-name="{{card.name}}" data-description="{{card.flavorText}}"
              data-image="{{card.images.small}}" data-user="{{@root.user_id}}">people</i></a></li>
        <li><a onclick="M.toast({html: '{{card.card_name}} Added to Deck', classes: 'rounded blue'})"
            class="btn-floating red modal-close"><i class="material-icons">add</i></a></li>
      </ul>
    </div>
  </div>
</div>
{{/each}}