{{! Carousel of cards }}


<div class="carousel">
  {{#each cards as |card|}}
  <a href="#{{card.id}}"class="carousel-item modal-trigger"><img src="{{card.card_image}}" /></a>
  <!-- Modal Structure -->
  <div id="{{card.id}}" class="modal">
    <div class="modal-content">
      <h4>{{card.card_name}}</h4>
      <p>{{card.description}}</p>
    </div>
    <div class="modal-footer">
      <a
        href="#!"
        class="modal-close waves-effect waves-green btn-flat"
      >Agree</a>
    </div>
  </div>
  {{/each}}

