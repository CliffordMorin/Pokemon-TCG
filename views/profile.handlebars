{{! Carousel of cards }}

<div class="carousel">
  {{#each cards as |card|}}
    <a href="#{{card.id}}" class="carousel-item modal-trigger"><img
        src="{{card.card_image}}"
      /></a>
    <!-- Modal Structure -->
    <div id="{{card.id}}" class="modal">
      <div class="modal-content">
        <h4>{{card.card_name}}</h4>
        <p>{{card.description}}</p>
      </div>
      <div class="modal-footer">
        <div class="fixed-action-btn">
          <a class="btn-floating btn-large red">
            <i class="large material-icons">mode_edit</i>
          </a>
          <ul>
            <li><a onclick="M.toast({html: 'Card Deleted From Deck', classes: 'rounded blue'})" class="btn-floating red modal-close"><i
                  class="material-icons"
                >delete_forever</i></a></li>
            <li><a onclick="location.href='/trading'" class="btn-floating green modal-close"><i
                  class="material-icons"
                >people</i></a></li>
          </ul>
        </div>
      </div>
    </div>
  {{/each}}
</div>

